{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build SuperMarioOdysseyOnline.Server.Basic",
            "program": "${workspaceFolder}/SuperMarioOdysseyOnline.Server.Basic/bin/Debug/net8.0/SuperMarioOdysseyOnline.Server.Basic.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SuperMarioOdysseyOnline.Server.Basic",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SuperMarioOdysseyOnline.Server.Application/bin/Debug/net8.0/SuperMarioOdysseyOnline.Server.Application.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SuperMarioOdysseyOnline.Server.Application",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Server/bin/Debug/net6.0/Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Server",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Docker .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/SuperMarioOdysseyOnline.Server.Application/SuperMarioOdysseyOnline.Server.Application.csproj"
            }
        }
    ]
}
